@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
    <h1 class="display-4">Portail des énergies renouvelables en Valais</h1>
    <div id="nre_donutchart" style="width: 900px; height: 500px;"></div>
</div>


<!-- Charts -->
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
    google.charts.load("current", { packages: ["corechart"] });
    google.charts.setOnLoadCallback(drawChart);
    function drawChart() {
        var data = google.visualization.arrayToDataTable([
            ['Energy', 'Representation'],
            ['Hydraulique au fil de l eau', 10000],
            ['Hydraulique à accumulation', 15000],
            ['Nouvelles énergies renouvelables', 2000]
        ]);

        var options = {
            title: 'Représentation des énergies renouvelables en 2022 [GWh]'
        };

        var chart = new google.visualization.PieChart(document.getElementById('nre_donutchart'));
        chart.draw(data, options);
    }
</script>

